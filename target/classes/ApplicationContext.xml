<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--配置bean 一个bean标签可以注册一个组件（对象，类）-->
	<bean id="helloWorld" class="com.mos.spring.beans.HelloWorld">
		<property name="name" value="spring"></property>
	</bean>
<bean id = "person01" class="com.mos.spring.beans.Person">
	<!-- 使用property标签为Person对象属性赋值-->
	<property name="name" value="小明"></property>
	<property name="age" value="25"></property>
	<property name="email" value="MosQ@.com"></property>
	<property name="gender" value="男"></property>
</bean>



</beans>